<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lyl.bamboyblur.MainActivity">


    <ImageView
        android:id="@+id/iv_head_portrait"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/picture" />

    <TextView
        android:id="@+id/tv_blur_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_head_portrait"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:text="模糊图片"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_blur_popup_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_blur_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:text="弹窗"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <!-- 弹窗背景 -->
    <ImageView
        android:id="@+id/iv_popup_window_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF5F7FA"
        android:clickable="true"
        android:visibility="gone" />

    <!-- 弹窗菜单 -->
    <RelativeLayout
        android:id="@+id/rl_popup_window"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_menu_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFFFF"
            android:clickable="true"
            android:gravity="center"
            android:padding="15dp"
            android:text="菜单1"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_menu_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_menu_1"
            android:background="#FFFFFFFF"
            android:clickable="true"
            android:gravity="center"
            android:padding="15dp"
            android:text="菜单2"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_menu_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_menu_2"
            android:background="#FFFFFFFF"
            android:clickable="true"
            android:gravity="center"
            android:padding="15dp"
            android:text="菜单3"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_close_popup_window"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_menu_3"
            android:layout_marginTop="10dp"
            android:background="#FFFFFFFF"
            android:gravity="center"
            android:padding="15dp"
            android:text="关闭弹窗"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

    </RelativeLayout>
</RelativeLayout>
